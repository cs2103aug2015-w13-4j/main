<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.media.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<fx:root prefHeight="750.0" prefWidth="420.0" type="StackPane" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane fx:id="borderPane">
         <center>
            <BorderPane fx:id="viewBorderPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="flagTaskLabel" text="Flagged tasks" />
                        <ListView fx:id="flagView" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </top>
               <center>
                  <VBox prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="generalTaskLabel" text="General Tasks" />
                        <ListView fx:id="generalView" prefHeight="600.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </center>
         <right>
            <VBox prefHeight="750.0" prefWidth="220.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="floatingTaskLabel" text="Floating Tasks" />
                  <ListView fx:id="floatingView" prefHeight="750.0" prefWidth="250.0" />
               </children>
            </VBox>
         </right>
      </BorderPane>
      <VBox fx:id="helpView" alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="300.0" text="Need Help?" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding></Label>
            <ListView maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="400.0" />
         </children></VBox>
      <VBox fx:id="searchView" alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="300.0" text="Search Results" />
            <ListView fx:id="searchContent" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="400.0" />
         </children>
      </VBox>
   </children>
</fx:root>
